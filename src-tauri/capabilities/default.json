{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "default",
	"description": "Capability for the main window",
	"windows": ["main"],
	"permissions": [
		"core:default",
		"opener:default",
		"notification:default",
		"dialog:default",
		"fs:default",
		{
			"identifier": "fs:scope",
			"allow": [
				{
					"path": "$DESKTOP/**, $DOCUMENTS/**, $DOWNLOAD/**, $APPDATA/**"
				}
			]
		},
		"fs:allow-read"
	]
}
