{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Tauri Music",
	"version": "0.1.0",
	"identifier": "com.pyaesonekhant.tauri-music",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "Tauri Music",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' ipc: http://ipc.localhost; img-src 'self' asset://localhost data:; media-src 'self' asset: http://asset.localhost",
			"assetProtocol": {
				"enable": true,
				"scope": []
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/logo.icns",
			"icons/icon.ico"
		]
	}
}
